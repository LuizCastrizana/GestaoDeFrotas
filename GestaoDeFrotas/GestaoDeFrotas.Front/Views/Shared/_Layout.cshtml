<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cadastro de Motoristas</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a title="Home" id="btnHome" href='@Url.Action("Index", "Home", null)' class="botao-menu">
                    <img src="~/Content/Img/home.png" alt="Home" width="32" height="32" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a title="Painel de Motoristas" id="btnMotoristas" href='@Url.Action("PainelDeMotoristas", "Motorista", null)' class="botao-menu">
                            <img src="~/Content/Img/motorista.png" alt="Motoristas" width="32" height="30" />
                        </a>
                    </li>
                    <li>
                        <a title="Painel de Veículos" id="btnVeiculos" href='@Url.Action("PainelDeVeiculos", "Veiculo", null)' class="botao-menu">
                            <img src="~/Content/Img/veiculo2.png" alt="Veiculos" width="36" height="36" />
                        </a>
                    </li>
                    <li>
                        <a title="Painel de Viagens" id="btnViagens" href='@Url.Action("PainelDeViagens", "Viagem", null)' class="botao-menu">
                            <img src="~/Content/Img/viagem.png" alt="Veiculos" width="36" height="36" />
                        </a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle botao-menu" data-toggle="dropdown" href="#" aria-expanded="false">
                            <img src="~/Content/Img/config.png" alt="Motoristas" width="32" height="30" /><span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a title="Marcas, Modelos..." id="btnDetalhesVeiculo" href="@Url.Action("DetalhesVeiculo", "Configuracao")">
                                    Detalhes do veículo
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a title="Popular BD" id="btnPopular" href="@Url.Action("PopularBD", "Configuracao")">
                                    Estados e Municipios
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderPage("~/Views/Shared/_Feedback.cshtml")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gerenciamento de Frotas</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/inputmask")
    @RenderSection("scripts", required: false)
</body>
</html>
